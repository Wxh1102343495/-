<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wxh.bicyclerental.mapper.CouponMapper">
    <resultMap type="Coupon" id="couponResultMap">
        <id column="coupon_id" property="coupon_id"/>
        <result column="coupon_name" property="coupon_name"/>
        <result column="discount" property="discount"/>
        <result column="price" property="price"/>
    </resultMap>
    <select id="selectOne" parameterType="Integer" resultType="Coupon">
		select * from coupon where coupon_id=#{0}
	</select>
    <select id="select" resultMap="couponResultMap">
		select * from coupon
	</select>
    <insert id="insert" parameterType="Coupon">
		insert into coupon(coupon_name,discount,price) values(#{coupon_name},#{discount},#{price})
	</insert>
    <delete id="delete" parameterType="Integer">
		delete from coupon where coupon_id=#{0}
	</delete>
    <update id="update" parameterType="Coupon">
		update coupon set coupon_name=#{coupon_name},discount=#{discount},price=#{price} where coupon_id=#{coupon_id}
	</update>
</mapper>